{
    "name": "madesimple/slim-auth",
    "description": "Authentication and authorisation middleware for Slim framework",
    "type": "library",
    "require": {
        "php": ">=7.1",
        "slim/slim": "^4",
        "psr/log": "^1",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "firebase/php-jwt": "^5.0",
        "psr/container": "^1.0",
        "slim/psr7": "^1.1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Scopes",
            "email": "peter.scopes@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Slim\\Middleware\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MadeSimple\\Slim\\Middleware\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "firebase/php-jwt": "Required to use JwtAuthentication (^5.0)"
    }
}
