{
    "name": "madesimple/slim-auth",
    "description": "Authentication and authorisation middleware for Slim framework",
    "type": "library",
    "require": {
        "php": ">=7.0",
        "slim/slim": "^3.8",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3",
        "firebase/php-jwt": "^3.0 || ^4.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Scopes",
            "email": "peter.scopes@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Slim\\Middleware\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MadeSimple\\Slim\\Middleware\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "firebase/php-jwt": "Required to use JwtAuthentication (^3.0 || ^4.0)"
    }
}
